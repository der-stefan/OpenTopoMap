<Style name="symbols-saddle">
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<Filter>([natural] = 'saddle')</Filter>
		<PointSymbolizer file="symbols-otm/saddle-10.svg" transform="rotate([direction]) scale(1)" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>([natural] = 'saddle')</Filter>
        <PointSymbolizer file="symbols-otm/saddle-15.svg" transform="rotate([direction]) scale(1)" />
	</Rule>
    <Rule>
		&maxscale_zoom14;
		&minscale_zoom17;
		<Filter>[natural] = 'saddle' and not ([name] = null)</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="9" fill="black" margin="1" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dy="10" wrap-width="100">[name]+"\n"+[ele]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom17;
		<Filter>[natural] = 'saddle' and ([name] = null)</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="9" fill="black" margin="1" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dy="10" wrap-width="100">[ele]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<Filter>([natural] = 'col' or [natural] = 'notch')</Filter>
		<PointSymbolizer file="symbols-otm/saddle-10.svg" transform="rotate([direction]) scale(1)" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>([natural] = 'col' or [natural] = 'notch')</Filter>
		<PointSymbolizer file="symbols-otm/saddle-15.svg" transform="rotate([direction]) scale(0.8)" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>([natural] = 'col' or [natural] = 'notch') and not ([name] = null)</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="9" fill="black" margin="1" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dy="8" wrap-width="100">[name]+"\n"+[ele]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>([natural] = 'col' or [natural] = 'notch') and ([name] = null)</Filter>
		<TextSymbolizer fontset-name="sans-oblique" size="9" fill="black" margin="1" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dy="8" wrap-width="100">[ele]</TextSymbolizer>
	</Rule>

</Style>
