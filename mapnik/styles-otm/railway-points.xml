<Style name="railway-points">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom17;
		<Filter>[railway] = 'level_crossing'</Filter>
		<PointSymbolizer file="symbols-otm/railway_crossing.png"/>
	</Rule>
	
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<Filter>[railway] = 'station' and ([subway] = 'yes' or [station] = 'subway')</Filter>
		<PointSymbolizer file="symbols-otm/station_subway_z13.png" />
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom17;
		<Filter>[railway] = 'station' and ([subway] = 'yes' or [station] = 'subway')</Filter>
		<PointSymbolizer file="symbols-otm/station_subway.png" />
	</Rule>
</Style>
