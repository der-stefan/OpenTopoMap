	<!-- football -->
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom16;
		<Filter>([icon]='football')</Filter>
		<PointSymbolizer allow-overlap="true" ignore-placement="true" file="symbols-otm/sports-foot-us.svg" transform="rotate([angle]) scale(0.1035*[labelsizefactor])"/>
