<Style name="symbols-poly">
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom17;
		<Filter>([power] = 'generator') and ([generator:source] = 'solar') and ([way_area] &gt; 25000)</Filter>
		<PolygonSymbolizer fill="#a6b7ff" fill-opacity="0.2" />
		<PointSymbolizer file="symbols-otm/photovoltaic.png"/>
	</Rule>
	
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom15;
		<Filter>([leisure] = 'golf_course' or ([leisure] = 'pitch' and [sport] = 'golf')) and [way_area] &gt; 25000</Filter>
		<PointSymbolizer file="symbols-otm/golf.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom17;
		<Filter>([leisure] = 'golf_course' or ([leisure] = 'pitch' and [sport] = 'golf')) and [way_area] &gt; 25000</Filter>
		<PointSymbolizer file="symbols-otm/golf_z15.png"/>
		<TextSymbolizer fontset-name="sans-oblique" size="10" fill="black" halo-radius="2" halo-fill="rgba(255,255,255,0.9)" placement="point" dy="12" wrap-width="100" wrap-before="true">[name]</TextSymbolizer>
	</Rule>
</Style>
