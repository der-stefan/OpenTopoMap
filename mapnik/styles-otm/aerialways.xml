<Style name="aerialways">
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom17;
		<Filter>[aerialway] = 'cable_car' or [aerialway] = 'gondola'</Filter>
		<LineSymbolizer stroke="black" stroke-width="0.5"/>
		<LinePatternSymbolizer file="symbols-otm/aerialway_gondola.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom17;
		<Filter>[aerialway] = 'goods'</Filter>
		<LineSymbolizer stroke="black" stroke-width="0.5"/>
		<LinePatternSymbolizer file="symbols-otm/aerialway_goods.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom17;
		<Filter>[aerialway] != 'cable_car' and [aerialway] != 'gondola' and [aerialway] != 'goods'</Filter>
		<LineSymbolizer stroke="black" stroke-width="0.5"/>
		<LinePatternSymbolizer file="symbols-otm/aerialway.png"/>
	</Rule>
</Style>
