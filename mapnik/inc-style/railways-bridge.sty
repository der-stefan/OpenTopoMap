<Style name="railways-bridge">
	<Rule>
		&maxscale_zoom12;
		&minscale_zoom12;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="white" stroke-width="4.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_small.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="white" stroke-width="5.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_z13.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="white" stroke-width="5.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_z14.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom16;
		<Filter>([railway] = 'rail')</Filter>
		<LineSymbolizer stroke="white" stroke-width="6.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_z15.png"/>
	</Rule>

	<Rule>
		&maxscale_zoom13;
		&minscale_zoom16;
		<Filter>(([railway] = 'narrow_gauge') or ([railway] = 'funicular')) </Filter>
		<LineSymbolizer stroke="white" stroke-width="4.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_small.png"/>
	</Rule>	

	<Rule>
		&maxscale_zoom13;
		&minscale_zoom13;
		<Filter>([railway] = 'disused')</Filter>
		<LineSymbolizer stroke="white" stroke-width="5.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_z13_disused.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom14;
		<Filter>([railway] = 'disused')</Filter>
		<LineSymbolizer stroke="white" stroke-width="5.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_z14_disused.png"/>
	</Rule>
	<Rule>
		&maxscale_zoom15;
		&minscale_zoom16;
		<Filter>([railway] = 'disused')</Filter>
		<LineSymbolizer stroke="white" stroke-width="6.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_z15_disused.png"/>
	</Rule>

	<Rule>
		&maxscale_zoom14;
		&minscale_zoom16;
		<Filter>([railway] = 'light_rail')</Filter>
		<LineSymbolizer stroke="white" stroke-width="4.5" stroke-opacity="0.8" />
		<LinePatternSymbolizer file="symbols-topo/rail_small.png"/>
	</Rule>
</Style>
