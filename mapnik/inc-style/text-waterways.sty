<Style name="text-waterways">
	<Rule>
		&maxscale_zoom14;
		&minscale_zoom15;
		<Filter>[waterway] = 'river'</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="10" fill="#2020ff" spacing="700" minimum-distance="250" minimum-path-length="200" max-char-angle-delta="30" dy="6" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="line">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom16;
		<Filter>[waterway] = 'river'</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="11" fill="#2020ff" spacing="700" minimum-distance="250" minimum-path-length="200" max-char-angle-delta="30" dy="8" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="line">[name]</TextSymbolizer>
	</Rule>

	<Rule>
		&maxscale_zoom15;
		&minscale_zoom15;
		<Filter>[waterway] = 'stream'</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="8" fill="#2020ff" spacing="700" minimum-distance="250" minimum-path-length="200" max-char-angle-delta="30" dy="5" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="line">[name]</TextSymbolizer>
	</Rule>
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom16;
		<Filter>[waterway] = 'stream'</Filter>
		<TextSymbolizer face-name="DejaVu Sans Oblique" size="10" fill="#2020ff" spacing="700" minimum-distance="250" minimum-path-length="200" max-char-angle-delta="30" dy="7" halo-radius="1" halo-fill="rgba(255,255,255,0.8)" placement="line">[name]</TextSymbolizer>
	</Rule>
</Style>
