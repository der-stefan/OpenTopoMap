<Style name="waterway-arrows">
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom15;
		<Filter>([waterway] = 'river') and ([intermittent] != 'yes')</Filter>
		<MarkersSymbolizer file="symbols-topo/waterway-arrow.png" placement="line" spacing="300" transform="translate(0 -4)"/>
	</Rule>
	<Rule>
		&maxscale_zoom16;
		&minscale_zoom16;
		<Filter>([waterway] = 'river') and ([intermittent] != 'yes')</Filter>
		<MarkersSymbolizer file="symbols-topo/waterway-arrow.png" placement="line" spacing="300" transform="translate(0 -6)"/>
	</Rule>

	
<!-- streams and drains -->
	<!-- always water (intermittent!=yes) -->
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom16;
		<Filter>([waterway] = 'stream') and ([intermittent] != 'yes')</Filter>
		<MarkersSymbolizer file="symbols-topo/waterway-arrow.png" placement="line" spacing="300" transform="translate(0 -4)"/>
	</Rule>

</Style>
