	"type": "symbol",
	"filter": ["==", ["get","historic"], "castle"],
	"layout": {
        "icon-image": ["match",["get","ruins"],"yes","castle_ruins_z13","castle_z13"],
        "icon-offset": [0,-3],
        "icon-keep-upright": true,
        "icon-allow-overlap": true,
        "symbol-placement": "point"
